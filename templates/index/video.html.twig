{% extends 'base.html.twig' %}

{% block content %}

<div class="example-wrapper">
    <h1>WP News - Never Code Alone Open Source Projekt</h1>

    <ul class="list-unstyled">
        {% for key,video in youTubeVideos %}
            <li>
                <div>
                    <iframe title="{{ video['snippet']['title'] }}" width="560" height="315" src="https://www.youtube.com/embed/{{ video['snippet']['resourceId']['videoId'] }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="#info-{{ key }}" aria-controls="info-{{ key }}" role="tab" data-toggle="tab">
                                Infos:
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Channel:</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Published:</a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="info-{{ key }}">
                            <ul>
                                <li>
                                    <strong>Title:</strong> {{ video['snippet']['title'] }}
                                </li>
                                <li>
                                    <strong>Channel:</strong> {{ video['snippet']['channelTitle'] }}
                                </li>
                                <li>
                                    <strong>Published: </strong> {{ video['snippet']['publishedAt'] | date("F jS \\a\\t g:ia") }}
                                </li>
                            </ul>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="profile">Channel: tab</div>
                        <div role="tabpanel" class="tab-pane" id="messages">Published: tab</div>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>

</div>
{% endblock %}
